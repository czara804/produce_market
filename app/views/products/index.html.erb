<h1>You are part of the Preston Community</h1>

<div>

<div class='products-group'>
  <% @products.each do |product| %>
  <div class='product-box'>
    <div class='product-card'>
      <p class='name'><%= product.name %></p>
      <%= image_tag product.photo if product.photo.attached? %>

      <%# <p><%= product.description %>
      <p>$<%= product.price %> for <%= product.quantity %></p>
      <p>Seller: <%= product.user.firstname %> </p>

      <p><%= link_to 'See more details', product_path(product) %></p>
      <% if user_signed_in? && product.user_id == current_user.id %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: 'Are you sure?'} %>
      <% end %>

      
    </div>
  </div>
  <% end %>

</div>


