<h1 class='prod-title'>You are part of the Preston Community</h1>

<div>
  <div class='searchbar'>
    <%= form_tag @products_path, method: 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search" %>
      <% end %>
  </div>
  <div class='products-group'>
    <% @products.each do |product| %>
    
      <div class='product-card'>
          <div class='product-text'>
            <div class='name'><%= product.name%><%= button_to 'Add to wishlist', add_wishlist_product_path(product) %></div>
            <div>$<%= product.price %> for <%= product.quantity %>kg</div>
            <div>Seller: <%= product.user.firstname %> </div>
            
          </div>
          <div class="product-photo">
            <%= image_tag product.photo if product.photo.attached? %>
          </div>
          <div class='links'>
            <%= link_to 'See more details', product_path(product) %> 
            <% if user_signed_in? && product.user_id == current_user.id %>
              | <%= link_to 'Edit', edit_product_path(product) %> 
              | <%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: 'Are you sure?'} %>
            <% end %>
          </div>
        <%# </div> %>
      </div>
    <% end %>

  </div>


</div>